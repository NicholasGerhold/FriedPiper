<UserControl x:Class="FriedPiper.PointOfSale.CompleteOrderComponents.OrderTotalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriedPiper.PointOfSale.CompleteOrderComponents"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <TextBlock Text="{Binding Path=Total, StringFormat= Total Sale: {0}}" FontSize="25" Margin="4"/>
    </Grid>
</UserControl>
