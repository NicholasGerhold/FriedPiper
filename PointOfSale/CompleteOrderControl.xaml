<UserControl x:Class="FriedPiper.PointOfSale.CompleteOrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FriedPiper.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="648">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button VerticalAlignment="Center" FontSize="40" Click="onCashClick"> Cash </Button>
        <Button Grid.Column="1" VerticalAlignment="Center" FontSize="40" Click="onCreditClick"> Credit </Button>
        <Button Grid.Column="2" VerticalAlignment="Center" FontSize="40" Click="onDebitClick"> Debit</Button>
    </Grid>
</UserControl>
